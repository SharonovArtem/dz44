    class Warrior
    {
        protected int Hp;
        protected int Damage;
        protected int Armor;

        public Warrior(int hp, int damage, int armor)
        {
            Hp = hp;
            Damage = damage;
            Armor = armor;
        }

        public void TakeDamage(int hp, int damage)
        {
            hp -= damage;
        }
    }

